<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Add these if your bundles aren't working -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap_superhero.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("E-Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="navbar-collapse-main" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Products <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/produits/ListeProduit">Catalogue des produits</a></li>
                            <li class="divider"></li>
                            <li><a href="~/produits/AjouterProduit">Ajouter Produit</a></li>
                            <li class="divider"></li>
                            <li><a href="~/produits/ListeModification">Modifier Produit</a></li>
                            <li class="divider"></li>
                            <li><a href="~/produits/ListeSuppression">Supprimer Produit</a></li>
                        </ul>
                    </li>
                    <li class="active"><a href="">Mon Panier <span class="sr-only">(current)</span></a></li>
                    <li class="active"><a href="">A propos<span class="sr-only">(current)</span></a></li>
                    <li class="active"><a href="">Contact <span class="sr-only">(current)</span></a></li>


                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="margin-top: 70px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - E-Shop</p>
        </footer>
    </div>

    <!-- Make sure these are at the bottom of your page -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>